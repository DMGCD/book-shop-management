<configuration>
    <property name="patternLog" value="%d{yyyy-mm-dd  HH:mm:ss} [%thread] %-5level %logger{36} -  %msg%n"/>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                ${patternLog}
            </pattern>
        </encoder>
    </appender>

    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>
            D:/SpringBootP/logs/application.log
        </file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>D:/SpringBootP/logs/archive/application-%d{yyyy-MM-dd}-%i.log.text</fileNamePattern>
            <maxFileSize>10KB</maxFileSize>
            <maxHistory>1</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                ${patternLog}
            </pattern>
        </encoder>

    </appender>
    <root level="info">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROLLING_FILE"/>
    </root>
</configuration>